{
  "name": "typescript-jest-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Typescript and Jest",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nodemon --config nodemon.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "@types/source-map-support": "^0.4.1",
    "jest": "^23.4.0",
    "prettier": "^1.13.7",
    "ts-jest": "23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "dist",
      "**/*.spec.(ts|tsx)"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  }
}