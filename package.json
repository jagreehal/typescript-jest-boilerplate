{
  "name": "typescript-jest-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Typescript and Jest",
  "scripts": {
    "test": "jest",
    "test:w": "jest --watch"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.50",
    "@types/source-map-support": "^0.4.0",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "ts-jest": "21.2.1",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "5.3.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.1"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/*.spec.(ts|tsx)"],
    "coveragePathIgnorePatterns": ["/node_modules/", "**/*.spec.(ts|tsx)"]
  }
}
