{
  "name": "typescript-jest-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Typescript and Jest",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/source-map-support": "^0.4.0",
    "jest": "^22.1.4",
    "prettier": "^1.10.2",
    "ts-jest": "22.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "dist",
      "**/*.spec.(ts|tsx)"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  }
}
